@using DemoApplication.ViewModels.Admin.SubNavbar
@model List<SubNavbarListItemViewModel>


<div class="">
    <a asp-route="admin-subnavbar-add" target="_blank" class="btn btn-secondary">Add new SubNavbar</a>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <h4 class="card-title">Navbars</h4>
        </div><!--end card-header-->
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped mb-0">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Url</th>
                            <th>Order</th>
                            <th>Navbar</th>

                            <th class="text-end">Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var navbar in Model)
                        {
                            <tr>
                                <td>@navbar.Name</td>
                                <td>@navbar.ToURL</td>
                                <td>@navbar.Order</td>
                                <td>@navbar.Navbar</td>




                                <td class="text-end">
                                    <a asp-route="admin-subnavbar-update" asp-route-id="@navbar.Id" target="_blank" class="btn btn-secondary">Update SubNavbar</a>
                                    <form class="d-none" method="POST" asp-route="admin-subnavbar-delete" asp-route-id="@navbar.Id" id="update-@navbar.Id">
                                    </form>

                                    <button type="submit" form="update-@navbar.Id"><i class="las la-trash-alt text-secondary font-16"></i></button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table><!--end /table-->
            </div><!--end /tableresponsive-->
        </div><!--end card-body-->
    </div><!--end card-->
</div>